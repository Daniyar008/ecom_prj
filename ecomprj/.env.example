# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False

# Allowed Hosts (разделяйте запятыми)
ALLOWED_HOSTS=yourdomain.onrender.com,www.yourdomain.com

# CSRF Trusted Origins (разделяйте запятыми)
CSRF_TRUSTED_ORIGINS=https://yourdomain.onrender.com

# Database (Render автоматически создаст эту переменную)
DATABASE_URL=postgres://user:password@host:port/database

# Stripe Keys
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLIC_KEY=your-stripe-public-key

# ===== SUPABASE STORAGE SETTINGS =====
# Set USE_SUPABASE_STORAGE=True to enable cloud media storage
USE_SUPABASE_STORAGE=False

# Supabase Storage Credentials
# Go to Supabase Dashboard -> Settings -> API
# Use service_role key for storage operations
SUPABASE_STORAGE_ACCESS_KEY=your-supabase-project-id
SUPABASE_STORAGE_SECRET_KEY=your-service-role-key

# Storage bucket name (create in Supabase Dashboard -> Storage)
SUPABASE_STORAGE_BUCKET=media

# Supabase Storage URL (S3-compatible endpoint)
# Format: https://<project-id>.supabase.co/storage/v1/s3
SUPABASE_STORAGE_URL=https://YOUR-PROJECT-ID.supabase.co/storage/v1/s3

# Public URL for accessing files
# Format: <project-id>.supabase.co
SUPABASE_STORAGE_PUBLIC_URL=YOUR-PROJECT-ID.supabase.co

# Region (usually us-east-1 for Supabase)
SUPABASE_STORAGE_REGION=us-east-1
